CREATE TABLE SALA(ID_SALA INTEGER,ID_PELICULA INTEGER,ID_HORARIO INTEGER,NUM_ASIENTO INTEGER,
             CONSTRAINT PK_ID_SALA PRIMARY KEY (ID_SALA)
             CONSTRAINT FK1_ID_ID_PELICULA FOREING KEY (ID_PELICULA) REFERENCES PELICULA(ID_PELICULU),
             CONSTRAINT FK2_ID_ID_HORARIO FOREING KEY (ID_HORARIO) REFERENCES HORARIO(ID_HORARIO));

CREATE SEQUENCE SECUENCIA_PELICULA
STAR WITH 2
INCREMENT BY 1
NOMAXVALUE;

CREATE SECUENCE SECUENCIA_HORARIO
STAR WITH 3
INCREMENT BY 1
NOMAXVALUE;

CREATE TABLE REPARTO(ID_REPARTO INTEGER,ACTORES VARCHAR2(500)
              CONSTARINT PK_ID_REPARTO PRIMARY KEY (ID_REPARTO);

CREATE SECUENCE SECUENCIA_REPARTO
STAR WITH 1
INCREMENT BY 1
NOMAXVALUE;
